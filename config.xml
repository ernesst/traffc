<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hatemzidi.traffc" version="0.9.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        xmlns:gap="http://java.sun.com/xml/ns/j2ee">
    <name>traffc</name>
    <description>
        traffc is your new road companion. The minimalistic tool to check, in real time, your area's traffic condition.
        it's just light, simple and instantaneously available.
    </description>
    <author email="hatem.zidi@gmail.com" href="http://whatis.traffc.info">
        Hatem ZIDI
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-console" spec="~1.0.2" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="StatusBarOverlaysWebView" value="true" />
        <preference name="StatusBarStyle" value="darkcontent" />
        <icon height="29" src="resources/icons/ios/icon-small.png" width="29" />
        <icon height="58" src="resources/icons/ios/icon-small-2x.png" width="58" />
        <icon height="40" src="resources/icons/ios/icon-40.png" width="40" />
        <icon height="80" src="resources/icons/ios/icon-40-2x.png" width="80" />
        <icon height="50" src="resources/icons/ios/icon-50.png" width="50" />
        <icon height="100" src="resources/icons/ios/icon-50-2x.png" width="100" />
        <icon height="57" src="resources/icons/ios/icon.png" width="57" />
        <icon eight="114" src="resources/icons/ios/icon-2x.png" width="114" />
        <icon height="60" src="resources/icons/ios/icon-60.png" width="60" />
        <icon height="120" src="resources/icons/ios/icon-60-2x.png" width="120" />
        <icon height="180" src="resources/icons/ios/icon-60-3x.png" width="180" />
        <icon height="72" src="resources/icons/ios/icon-72.png" width="72" />
        <icon height="144" src="resources/icons/ios/icon-72-2x.png" width="144" />
        <icon height="76" src="resources/icons/ios/icon-76.png" width="76" />
        <icon height="152" src="resources/icons/ios/icon-76-2x.png" width="152" />
        <splash height="480" src="resources/screens/ios/screen-iphone-portrait.png" width="320" />
