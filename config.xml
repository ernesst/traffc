<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hatemzidi.traffc" version="0.0.1" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://java.sun.com/xml/ns/j2ee">
    <name>traffc</name>
    <description>
        traffc is your new road companion. The minimalistic tool to check, in real time, your area's traffic condition.
        it's just light, simple and instantaneously available.
    </description>
    <author email="hatem.zidi@gmail.com" href="http://whatis.traffc.info">
        Hatem ZIDI
    </author>

    <content src="index.html"/>

    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="geo:*"/>
