        <splash height="1334" src="resources/screens/ios/screen-iphone-portrait-667h.png" width="750" />
        <splash height="2208" src="resources/screens/ios/screen-iphone-portrait-736h.png" width="1242" />
        <splash height="1024" src="resources/screens/ios/screen-ipad-portrait.png" width="768" />
        <splash height="2048" src="resources/screens/ios/screen-ipad-portrait-2x.png" width="1536" />
    </platform>
</widget>
